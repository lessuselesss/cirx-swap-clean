<script setup>
// Import components
import { getTokenPrices } from '~/services/priceService.js'

// Page metadata
definePageMeta({
  title: 'Circular Swap',
  layout: 'default'
})

// Multi-Wallet connection (using same composable as MultiWalletButton)
const { 
  isConnected, 

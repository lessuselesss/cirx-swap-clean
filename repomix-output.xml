    await page.goto('/swap');
    
    // Perform normal action first
    const amountInput = page.locator('[data-testid="payment-amount"], input[type="number"]').first();
    if (await amountInput.isVisible({ timeout: 3000 })) {
      await amountInput.fill('150');
    }
    
